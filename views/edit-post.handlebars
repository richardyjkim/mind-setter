<article>
  <h2>
    I Meant to say This
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
      <input name="content" type="text" value="{{content}}" />
      <span>({{post.content}})</span>
    </div>
    <div>
      {{post.love_count}} {{format_plural "love(s) on this Thought" post.love_count}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Rethink to Update</button>
    <button type="button" class="delete-post-btn">Medidate to Flush</button>
  </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>